<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="basicstruts" namespace="/" extends="struts-default">
        <!--struts2设置默认首页-->
        <default-action-ref name="showProduct"/>


        <action name="showProduct" class="action.UserAction" method="show">
            <result name="show">/modules/index.html</result>
        </action>

        <action name="login" class="action.LoginAction" method="login">
            <result name="login_success">/modules/login_success.html</result>
        </action>
    </package>

</struts>
